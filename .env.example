# ==============================================================================
# API KEYS
# ==============================================================================
# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# YouTube Data API v3 Key
YOUTUBE_API_KEY=your_youtube_api_key_here

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# Supabase Database URL (for SQLAlchemy/pg8000)
DATABASE_URL=postgresql://user:password@host:port/database

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anon/Public Key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (for admin operations - keep secure!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Debug Mode (True/False)
DEBUG=False

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Streamlit Server Port
STREAMLIT_SERVER_PORT=8501

# ==============================================================================
# RATE LIMITING & CACHING
# ==============================================================================
# Maximum API requests per minute
MAX_REQUESTS_PER_MINUTE=60

# Cache TTL in hours
CACHE_TTL_HOURS=24

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID (optional)
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# ==============================================================================
# AUTHENTICATION (if implementing user accounts)
# ==============================================================================
# JWT Secret Key for authentication
# JWT_SECRET_KEY=your_jwt_secret_key_here

# Session expiration in hours
# SESSION_EXPIRE_HOURS=24

# ==============================================================================
# EMAIL CONFIGURATION (if implementing notifications)
# ==============================================================================
# SMTP Server Configuration
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# DEFAULT_FROM_EMAIL=your_email@example.com

# ==============================================================================
# SECURITY
# ==============================================================================
# Allowed hosts (comma-separated list of domains)
# ALLOWED_HOSTS=.example.com,localhost,127.0.0.1

# CORS Allowed Origins (comma-separated)
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000
